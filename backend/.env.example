# Environment Configuration for Otaku Shelf Backend

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Cache Configuration
CACHE_TTL=86400

# API Configuration
MANGADX_API_BASE=https://api.mangadex.org
MANGADX_USER_AGENT=OtakuShelf/1.0.0

# Image Processing
MAX_IMAGE_WIDTH=500
MAX_IMAGE_HEIGHT=750
IMAGE_QUALITY=85

# Logging
LOG_LEVEL=info