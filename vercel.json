{
  "functions": {
    "api/image-proxy.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/manga/:path*",
      "destination": "https://api.mangadex.org/:path*"
    },
    {
      "source": "/covers/:mangaId/:filename*",
      "destination": "https://uploads.mangadex.org/covers/:mangaId/:filename*"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}